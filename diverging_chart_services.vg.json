{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/LorXinHui/FIT3179/main/Homework%20Week%2010/data/employment_2020_by_gender_long.csv"
    },
    "transform": [
        {"filter": "datum.category == 'Services'"},
        {"calculate": "datum.gender == 'female' ? 'Female' : 'Male'", "as": "gender"},
        {"filter": {"field": "country", "oneOf": ["Macao", "Hong Kong", "Luxembourg", "Guam", "Singapore", "Bahamas", "Puerto Rico", "Brunei", "Israel", "Netherlands"]}}
      ],
      "spacing": 0,
      "hconcat": [{
          "transform": [{
              "filter": {"field": "gender", "equal": "Female"}
          }],
          "height": 300,
          "width": 300,
          "title": {
              "text": "Female",
              "font": "Ubuntu Condensed",
              "fontStyle": "san-serif"
          },
          "encoding": {
              "y": {
                  "field": "country",
                  "type": "nominal",
                  "title": null,
                  "axis": null
              },
              "x": {
                  "aggregate": "sum", "field": "value",
                  "title": "Population Employed (in %)",
                  "axis": {
                      "format": "s",
                      "titleFont": "Inter Tight",
                      "titleFontStyle": "san-serif"
                  },
                  "scale": {"domain": [100, 0]}
              },
              "tooltip": [
                  {"field": "gender", "type": "nominal", "title": "Gender"},
                  {"field": "country", "type": "nominal", "title": "Country"},
                  {"field": "value", "type": "quantitative", "title": "Population employed (in %)"}
              ]
          },
          "layer": [
              {
                  "params": [
                      {
                          "name": "highlight",
                          "select": {"type": "point", "on": "mouseover"}
                      },
                      {"name": "select", "select": "point"}
                  ],
                  "mark": {
                      "type": "bar",
                      "stroke": "#909090",
                      "cursor": "pointer"
                  },
                  "encoding": {
                      "color": {
                          "field": "value",
                          "type": "quantitative",
                          "scale": {"scheme": "yellowgreen", "domain": [70, 100]},
                          "legend": null
                      },
                      "fillOpacity": {
                          "condition": {"param": "select", "value": 1},
                          "value": 0.3
                      },
                      "strokeWidth": {
                          "condition": [
                            {
                              "param": "select",
                              "empty": false,
                              "value": 3
                            },
                            {
                              "param": "highlight",
                              "empty": false,
                              "value": 2
                            }
                          ],
                          "value": 0
                      }
                  }
              },
              {
                  "mark": {
                      "type": "text",
                      "align": "right",
                      "baseline": "middle",
                      "dx": -3
                  },
                  "encoding": {
                      "text": {
                          "field": "value", 
                          "type": "quantitative"
                      }
                  }
              }
          ]
      },
      {
          "height": 300,
          "width": 20,
          "view": {"stroke": null},
          "mark": {
              "type": "text",
              "align": "center",
              "font": "Inter Tight",
              "fontStyle": "san-serif",
              "fontSize": 20
          },
          "encoding": {
              "y": {"field": "country", "type": "ordinal", "axis": null},
              "text": {"field": "country", "type": "ordinal"}
          }
      },
      {
          "transform": [{
              "filter": {"field": "gender", "equal": "Male"}
          }],
          "height": 300,
          "width": 300,
          "title": {
              "text": "Male",
              "font": "Ubuntu Condensed",
              "fontStyle": "san-serif"
          },
          "encoding": {
              "y": {
                  "field": "country",
                  "type": "nominal",
                  "title": null,
                  "axis": null
              },
              "x": {
                  "aggregate": "sum", "field": "value",
                  "title": "Population Employed (in %)",
                  "axis": {
                      "format": "s",
                      "titleFont": "Inter Tight",
                      "titleFontStyle": "san-serif"
                  },
                  "scale": {"domain": [0, 100]}
              },
              "tooltip": [
                  {"field": "gender", "type": "nominal", "title": "Gender"},
                  {"field": "country", "type": "nominal", "title": "Country"},
                  {"field": "value", "type": "quantitative", "title": "Population employed (in %)"}
              ]
          },
          "layer": [
              {
                  "params": [
                      {
                          "name": "highlight",
                          "select": {"type": "point", "on": "mouseover"}
                      },
                      {"name": "select", "select": "point"}
                  ],
                  "mark": {
                      "type": "bar",
                      "stroke": "#909090",
                      "cursor": "pointer"
                  },
                  "encoding": {
                      "color": {
                          "field": "value",
                          "type": "quantitative",
                          "scale": {"scheme": "yellowgreen", "domain": [70, 100]},
                          "legend": null
                      },
                      "fillOpacity": {
                          "condition": {"param": "select", "value": 1},
                          "value": 0.3
                      },
                      "strokeWidth": {
                          "condition": [
                            {
                              "param": "select",
                              "empty": false,
                              "value": 3
                            },
                            {
                              "param": "highlight",
                              "empty": false,
                              "value": 2
                            }
                          ],
                          "value": 0
                      }
                  }
              },
              {
                  "mark": {
                      "type": "text",
                      "align": "left",
                      "baseline": "middle",
                      "dx": 3
                  },
                  "encoding": {
                      "text": {
                          "field": "value", 
                          "type": "quantitative"
                      }
                  }
              }
          ]
      }
  ],
    "config": {
        "background": null,
        "view": {"stroke": null}
    }  
}