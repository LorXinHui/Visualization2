        }
    ],
    "repeat": ["both", "male", "female"],
    "spec": {
        "height": 300,
        "width": 300,
        "layer": [
            {
                "params": [
                    {
                        "name": "highlight",
                        "select": {"type": "point", "on": "mouseover"}
                    },
                    {"name": "select", "select": "point"}
                ],
                "mark": {"type": "arc", "outerRadius": 120, "innerRadius": 40, "stroke": "lightgray"},
                "encoding": {
                    "theta": {
                        "field": {"repeat": "repeat"}, 
                        "type": "quantitative",
                        "stack": true
                    },
                    "color": {
                        "field": "category", 
                        "type": "nominal",
                        "scale": {"scheme": "yellowgreen"},
                        "title": null,
                        "legend":{
                            "labelFont": "Ubuntu Condensed",
                            "labelFontStyle": "san-serif",
                            "orient": "bottom"
                        }
                    },
                    "tooltip": [
                        {"field": "category", "type": "nominal", "title": "Economic Activity"},
                        {"field": {"repeat": "repeat"}, "type": "quantitative", "title": "Population employed (in%)"}
                    ],
                    "fillOpacity": {
                        "condition": {"param": "select", "value": 1},
                        "value": 0.3
                    },
                    "strokeWidth": {
                        "condition": [
                          {
                            "param": "select",
                            "empty": false,
                            "value": 3
                          },
                          {
                            "param": "highlight",
                            "empty": false,
                            "value": 2
                          }
                        ],
                        "value": 0
                    }
                }
            },
            {
                "mark": {
                    "type": "text", 
                    "radius": 140
                },
                "encoding": {
                    "text": {"field": {"repeat": "repeat"}, "type": "quantitative"},
                    "theta": {
                        "field": {"repeat": "repeat"}, 
                        "type": "quantitative",
                        "stack": true
                    },
                    "color": {
                        "field": "category", 
                        "type": "nominal",
                        "scale": {"scheme": "yellowgreen"},
                        "title": "Economic Activity"
                    }
                }
            },
            {
                "data": {
                    "values": [
                        {
                            "both": "Both",
                            "female": "Female",
                            "male": "Male"
                        }
                    ]
                },
                "mark": {
                    "type": "text",
                    "align": "left",
                    "baseline": "bottom",
                    "font": "Ubuntu Condensed",
                    "fontStyle": "san-serif",
                    "fontSize": 30,
                    "x": 0,
                    "y": 0
                },
                "encoding": {
                    "text": {"field": {"repeat": "repeat"}}
                }
            }
        ]
    },
    "config": {
        "background": null,
        "view": {"stroke": "transparent"}
    } 
