{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Population Employed in each Economic Activities",
    "padding": {"left": 5, "right": 5},
    "repeat": ["agriculture", "industry", "services"],
    "columns": 2,
    "spec": {
        "projection": {"type": "equalEarth"},
        "width": 600,
        "height": 300,
        "layer": [
            {
                "data": {
                  "url": "https://raw.githubusercontent.com/LorXinHui/FIT3179/main/oceans.topo.json",
                  "format": {"type": "topojson", "feature": "oceans"}
                },
                "mark": {"type": "geoshape", "fill": "skyblue"}
            },
            {
                "data": {
                    "url": "https://raw.githubusercontent.com/LorXinHui/FIT3179/main/ne_110m.json",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "transform": [
                    {
                        "calculate": "'Data is not avaliable in '+datum.properties.NAME",
                        "as": "note"
                    }
                ],
                "mark": {
                    "type": "geoshape",
                    "fill": "lightgray",
                    "stroke": "#909090",
                    "strokeWidth": 1
                },
                "encoding": {"tooltip": {"field": "note"}}
            },
            {
                "data": {
                    "url": "https://raw.githubusercontent.com/LorXinHui/FIT3179/main/Homework%20Week%2010/data/employment_2020_by_activities.csv"
                },
                "transform": [
                    {
                        "lookup": "country",
                        "from": {
                            "data": {
                                "url": "https://raw.githubusercontent.com/LorXinHui/FIT3179/main/ne_110m.json",
                                "format": {
                                    "type": "topojson",
                                    "feature": "ne_110m_admin_0_countries"
                                }
                            },
                            "key": "properties.NAME"
                        },
                        "as": "geo"
                    }
                ],
                "params": [
                    {
                        "name": "highlight",
                        "select": {"type": "point", "on": "mouseover"}
                    },
                    {"name": "select", "select": "point"}
                ],
                "mark": {
                    "type": "geoshape",
                    "stroke": "#909090",
                    "strokeWidth": 0.5
                },
                "encoding": {
                    "shape": {"field": "geo", "type": "geojson"},
                    "color": {
                        "field": {"repeat": "repeat"},
                        "type": "quantitative",
                        "scale": {"scheme": "yellowgreen", "domain": [0, 100]},
                        "legend":{
                            "labelFont": "Ubuntu Condensed",
                            "labelFontStyle": "san-serif",
                            "titleFont": "Ubuntu Condensed",
                            "titleFontStyle": "san-serif"
                        },
                        "title": "Population Employed (in%)"
                    },
                    "fillOpacity": {
                        "condition": {"param": "select", "value": 1},
                        "value": 0.3
                    },
                    "strokeWidth": {
                        "condition": [
                          {
                            "param": "select",
                            "empty": false,
                            "value": 2
                          },
                          {
                            "param": "highlight",
                            "empty": false,
                            "value": 1.5
                          }
                        ],
                        "value": 1
                    },
                    "tooltip": [
                        {"field": "country", "type": "nominal", "title": "Country"},
                        {
                            "field": {"repeat": "repeat"},
                            "type": "quantitative",
                            "title": "Population (in%)"
                        }
                    ]
                }
            },
            {
                "data": {
                    "values": [
                        {
                            "agriculture": "Agriculture",
                            "industry": "Industry",
                            "services": "Services"
                        }
                    ]
                },
                "mark": {
                    "type": "text",
                    "align": "left",
                    "baseline": "bottom",
                    "font": "Ubuntu Condensed",
                    "fontStyle": "san-serif",
                    "fontSize": 30,
                    "x": 0,
                    "y": 0
                },
                "encoding": {
                    "text": {"field": {"repeat": "repeat"}}
                }
            }
        ]
    },
    "config": {
        "background": null,
        "view": {"stroke": "transparent"}
    } 
}